<mt:If tag="EntryCategory">
<div class="entry-categories">
    <h4 class="entry-categories-header">Categories<span class="delimiter">:</span></h4>
    <ul class="entry-categories-list">
        <li class="entry-category"><mt:EntryCategories glue='<span class="delimiter">,</span></li> <li class="entry-category">'><a href="<$mt:CategoryArchiveLink$>" rel="tag" title="<$mt:CategoryDescription escape="html"$>"><$mt:CategoryLabel$></a></mt:EntryCategories></li>
    </ul>
</div>
</mt:If>
