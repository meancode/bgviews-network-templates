<script type="text/javascript" src="http://bgviewsnetwork.com/mt/mt-static/themes/bgviews/js/profile_tabs.js"></script>
<link href="http://bgviewsnetwork.com/mt/mt-static/themes/bgviews/css/profile_tabs.css" rel="stylesheet" type="text/css" media="all" />
<link href="http://bgviewsnetwork.com/mt/mt-static/themes/bgviews/css/profile_view.css" rel="stylesheet" type="text/css" media="all" />
</mt:SetVarBlock>

<$mt:Include module="Header MTCS 1" body_class="mt-profile-view"$>
<$mt:Include module="Header MTCS 2 Profile" body_class="mt-profile-view"$>
<$mt:Include module="Header MTCS 3" body_class="mt-profile-view"$>

<div id="edit-actions" style="float:right; margin-right:10px;">
<mt:IfLoggedIn element_id="edit_profile">
<p><a id="edit_profile_link" href="#">Edit My Profile</a></p>
<mt:Else>
<p class="edit-relation">
    <span id="following-status"></span>
    <mt:AuthorIfFollowing script="0">
    <$mt:AuthorUnfollowLink text="Unfollow"$>
    <mt:Else>
    <$mt:AuthorFollowLink text="Follow"$>
    </mt:AuthorIfFollowing>
</p>

    <mt:SetVarBlock name="html_body_footer" append="1">
    <script type="text/javascript" src="<$mt:CGIPath$><$mt:CommunityScript$>?__mode=relations_js&author_id=<$mt:AuthorID$><mt:If name="blog_id">&blog_id=<$mt:Var name="blog_id"$></mt:If>"></script>
    </mt:SetVarBlock>
</mt:IfLoggedIn>
</div>

<$mt:Include module="Userpic" userpic_type="profile" userpic_size="90"$>

<h1 id="page-title"><$mt:AuthorDisplayName encode_html="1"$></h1>

<div id="byline-position">
<mt:If tag="authordatabyline_position">
<h2><mt:authordatabyline_position></h2>
</mt:If>
</div>

<div id="other-profiles">
<a href="<$mt:CGIPath$><$mt:CommunityScript$>?__mode=feed&amp;_type=actions&amp;blog_id=<$mt:BlogID$>&amp;id=<$mt:AuthorID$>" title="BG Views Activity from <$mt:AuthorDisplayName encode_html="1"$>"><img src="<$mt:StaticWebPath$>themes/bgviews/images/feed-icon-16x16.gif" /></a>
<mt:If tag="authordataspam_email"><a href="mailto:<mt:authordataspam_email>" title="Email <$mt:AuthorDisplayName encode_html="1"$>"><img src="<$mt:StaticWebPath$>themes/bgviews/images/email_this.gif" /></a></mt:If>

<mt:If tag="authordatabgsu_weblog"><a href="<mt:authordatabgsu_weblog>" target="_blank" title="BGSU Weblog of <$mt:AuthorDisplayName encode_html="1"$>"><img src="<$mt:StaticWebPath$>themes/bgviews/images/bgsublogs.png" /></a></mt:If>



<mt:If tag="authordatafacebook"><a href="http://www.facebook.com/<mt:authordatafacebook>" target="_blank" title="Facebook profile of <$mt:AuthorDisplayName encode_html="1"$>"><img src="<$mt:StaticWebPath$>themes/bgviews/images/facebook.png" /></a></mt:If>
<mt:If tag="authordatatwitter_account"><a href="http://twitter.com/<mt:authordatatwitter_account>" target="_blank" title="Twitter account of <$mt:AuthorDisplayName encode_html="1"$>"><img src="<$mt:StaticWebPath$>themes/bgviews/images/twitter.png" /></a></mt:If>


</div>

<br clear="all" />

