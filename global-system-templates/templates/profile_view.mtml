            <ul class="recent-actions">
              </mt:ActionsHeader>
              <mt:ActionsComment>
                <li class="comment icon-comment"> Commented on
                  <mt:CommentEntry><a href="<$mt:CommentLink$>">
                    <$mt:EntryTitle encode_html="1"$>
                  </a></mt:CommentEntry>
                  <div class="excerpt">
                    <$mt:CommentBody words="40"$>
